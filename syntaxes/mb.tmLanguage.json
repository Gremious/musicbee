{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "MusicBee Formula",
	"scopeName": "source.musicbee",
	"patterns": [
		{
			"comment": "Tag",
			"name": "variable.musicbee",
			"match": "<[\\w\\s]+>"
		},
		{
			"comment": "Function",
			"name": "support.function.musicbee",
			"match":"\\$(\\w+)(?=\\()"
		},
		{
			"comment": "String",
			"name": "string.quoted.musicbee",
			"match":"\"(?:[^\"\\\\]|\\\\.)*\""
		},
		{
			"comment": "Text",
			"name": "keyword.musicbee",
			"match":"(?<=\\(|,)[\\w\\s]+|[\\n\\w]+"
		}
	]
}
